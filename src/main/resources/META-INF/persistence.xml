<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="gestionhotel-domain">

		<class>com.agonzales.gestionhotel.domain.Usuario</class>
		<class>com.agonzales.gestionhotel.domain.Privilegio</class>
		<class>com.agonzales.gestionhotel.domain.Compania</class>
		<class>com.agonzales.gestionhotel.domain.Habitacion</class>
		<class>com.agonzales.gestionhotel.domain.TipoHabitacion</class>
		<class>com.agonzales.gestionhotel.domain.Archivo</class>
		<class>com.agonzales.gestionhotel.domain.TipoArchivo</class>
		<class>com.agonzales.gestionhotel.domain.Rol</class>
		<class>com.agonzales.gestionhotel.domain.UsuarioRol</class>
		<class>com.agonzales.gestionhotel.domain.AccesoCompaniaRol</class>
		<class>com.agonzales.gestionhotel.domain.AjustesConfiguracion</class>
		
		
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="validate" />
		</properties>
	</persistence-unit>
</persistence>